#include<bits/stdc++.h>

using namespace std;

int main() 
{
    int t;
    long long int a,b,h;
    cin>>t;
    while(t--)
    {
       cin>>a>>b;
       h=(a+b)/4;
       if (a>=b && h>=b)
       {
            cout<<b<<endl;      
       }
       
       else if(b>=a && a<=h)
       {
        cout<<a<<endl;
       }
       else 
       {
           cout<<(a+b)/4<<endl;
       }

    }

}
