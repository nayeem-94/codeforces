#include <bits/stdc++.h>
using namespace std;
int main()
{
	string s;
  int tep;
  cin>>s;
  for(int i=0;i<s.length()-1;i+=2){
        
      for(int j=0;j<s.length()-1;j+=2){
          if(s[j]>s[j+2]){
              tep=s[j];
              s[j]=s[j+2];
              s[j+2]=tep;
          }
           
      }
  }
  cout<<s;
   return 0;
}
